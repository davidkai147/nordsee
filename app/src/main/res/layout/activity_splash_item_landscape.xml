<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_background_landscape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/screen"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/img_logo_landscape"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/logoo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_header_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_logo_landscape"
            android:text="WELCOME"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#F5DE72"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_desc_landscape"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/tv_header_landscape"
            android:textColor="#fff"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            />
    </RelativeLayout>
</layout>
